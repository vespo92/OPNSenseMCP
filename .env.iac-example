# OPNSense MCP Server Configuration
# Phase 4.5 - Infrastructure as Code

# OPNSense API Configuration
OPNSENSE_HOST=https://192.168.1.1
OPNSENSE_API_KEY=your-api-key-here
OPNSENSE_API_SECRET=your-api-secret-here
OPNSENSE_VERIFY_SSL=false

# IaC Configuration
IAC_ENABLED=true
STATE_DIRECTORY=./state
STATE_FORMAT=json

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups

# Cache Configuration (Optional)
ENABLE_CACHE=false
REDIS_HOST=localhost
REDIS_PORT=6379
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=opnsense_cache
POSTGRES_USER=opnsense
POSTGRES_PASSWORD=your-postgres-password
CACHE_TTL=300

# Logging
LOG_LEVEL=info
DEBUG=false

# MCP Server Settings
MCP_SERVER_NAME=opnsense-mcp
MCP_SERVER_VERSION=0.4.5

# Advanced IaC Settings
IAC_MAX_CONCURRENCY=5
IAC_ENABLE_ROLLBACK=true
IAC_CHECKPOINT_LIMIT=10
IAC_DRY_RUN_DEFAULT=true

# Resource Defaults
DEFAULT_VLAN_PCP=0
DEFAULT_FIREWALL_ACTION=block
DEFAULT_HAPROXY_MODE=http
DEFAULT_HAPROXY_BALANCE=roundrobin
