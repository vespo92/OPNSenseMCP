# OPNSense MCP Enhanced Configuration

# OPNSense API Configuration
OPNSENSE_HOST=your-opnsense-host
OPNSENSE_API_KEY=your-api-key
OPNSENSE_API_SECRET=your-api-secret
OPNSENSE_VERIFY_SSL=false

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=opnsense_mcp
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_secure_password
POSTGRES_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=opnsense:
REDIS_CLUSTER=false

# Cache Configuration
CACHE_DEFAULT_TTL=300
CACHE_MAX_TTL=3600
CACHE_MIN_TTL=60
CACHE_COMPRESSION_THRESHOLD=1024
ENABLE_COMPRESSION=true
ENABLE_SMART_INVALIDATION=true
ENABLE_PATTERN_ANALYSIS=true

# Performance Configuration
CACHE_BATCH_SIZE=100
CACHE_MAX_CONCURRENCY=10
CACHE_TIMEOUT_MS=5000

# Docker Configuration (for docker-compose)
PGADMIN_PASSWORD=admin
