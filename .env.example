# OPNSense API Configuration
OPNSENSE_HOST=https://your-opnsense-ip
OPNSENSE_API_KEY=your-api-key-here
OPNSENSE_API_SECRET=your-api-secret-here
OPNSENSE_VERIFY_SSL=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/mnt/truenas/opnsense-backups
BACKUP_AUTO=true

# Cache Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=opnsense:
CACHE_TTL=300
ENABLE_CACHE=false

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=opnsense_mcp
POSTGRES_SCHEMA=public
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=your-postgres-password

# MCP Server Configuration
MCP_DEBUG=false
MCP_LOG_LEVEL=info

# Interface Mapping Configuration (Optional)
# Map friendly names to OPNsense interface keys
# Example: {"dmz": "opt8", "guest": "opt6", "iot": "opt4"}
# OPNSENSE_INTERFACE_MAPPINGS={"dmz": "opt8", "guest": "opt6"}
