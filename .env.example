# OPNSense API Configuration
OPNSENSE_HOST=https://your-opnsense-ip
OPNSENSE_API_KEY=your-api-key-here
OPNSENSE_API_SECRET=your-api-secret-here
OPNSENSE_VERIFY_SSL=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/mnt/truenas/opnsense-backups
BACKUP_AUTO=true

# Cache Configuration (Redis)
REDIS_HOST=10.0.0.2
REDIS_PORT=6379
CACHE_TTL=300
ENABLE_CACHE=true

# Database Configuration (PostgreSQL)
POSTGRES_HOST=10.0.0.2
POSTGRES_PORT=5432
POSTGRES_DB=opnsense_mcp
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_secure_password

# Docker Configuration
PGADMIN_PASSWORD=admin

# MCP Server Configuration
MCP_DEBUG=false
MCP_LOG_LEVEL=info
